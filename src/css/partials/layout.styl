html, body
  height: 100%
  overflow: hidden

body
  @extend .relative
  background-color: background_color
  overflow: hidden
  margin-top: 0

#main-menu-bar
  clearfix()
  z-index: 999 !important
  overflow: visible !important

#container
  transform-origin: 0 0
  -moz-transform-origin: 0 0
  -webkit-transform-origin: 0 0

#container-wrapper, #sidebar
  display: none

#container-wrapper, #timeline, svg, div
  -moz-user-select: none
  -webkit-user-select: none

_c = background_color - #050505
#container
  width: 4000px
  height: 4000px
  
  &.ui-state-active, &.ui-state-hover
    background: _c
    border: 0
    padding: 0

#container-wrapper
  @extend .relative
  width: 100%
  height: 1000px
  overflow: auto
  //z-index: 1

#sidebar
  background: background_color

.ui-layout-resizer-west
  border-right: 1px solid #3a3a3a
.ui-layout-resizer-south
  border-top: 1px solid #3a3a3a

#bottom-toolbox
  position: absolute
  bottom: -50px
  right: 20px
  width: 180px
  z-index: 10
#zoom-slider
  position: absolute
  right: 0
  bottom: 0
  width: 100px
  z-index: 10

#display-mode-switch
  position: absolute
  cursor: pointer
  top: 4px
  right: 23px
  z-index: 9997
  background: #000
  border-radius: 5px
  padding: 1px 9px
  font-size: 9px
  text-transform: uppercase
  letter-spacing: 1px
  //single-transition("background, color", 300ms)
  &:hover
    background: #efefef
    color: #333

#footer
  display: none
  visibility: hidden

.editor-mode
  .ui-layout-resizer
    visibility: visible !important

.player-mode
  #container-wrapper, #sidebar, #sidebar-toggle, #bottom-toolbox, .ui-layout-resizer
    visibility: hidden !important
  #webgl-window
    overflow: auto
    position: absolute
    top: 0
    right: 0
    left: 0
    bottom: 0
    text-align: center
    padding: 20px
    canvas
      cursor: auto
